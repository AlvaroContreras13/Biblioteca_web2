@{
    ViewBag.Title = "Inicio - Estudiante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .welcome-card {
            background: white;
            border-radius: 20px;
            padding: 60px;
            margin: 100px auto;
            max-width: 800px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            text-align: center;
        }

        .success-icon {
            font-size: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px;
        }

        .user-info {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin: 30px 0;
        }

        .btn-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 12px 30px;
            border-radius: 10px;
            font-weight: 600;
            transition: transform 0.2s;
        }

            .btn-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
                color: white;
            }
    </style>

<!-- Contenido Principal -->
<div class="container">
        <div class="welcome-card">
            <i class="fas fa-check-circle success-icon"></i>
            <h1>¡Bienvenido, Estudiante!</h1>
            <p class="lead text-muted">Has iniciado sesión correctamente</p>

            <div class="user-info">
                <h4><i class="fas fa-user text-primary"></i> Información de tu cuenta</h4>
                <hr>
                <p><strong>Nombre:</strong> @ViewBag.UserName</p>
                <p><strong>Rol:</strong> <span class="badge bg-success">@ViewBag.UserRole</span></p>
                <p><strong>ID de Usuario:</strong> @ViewBag.UserId</p>
                <p><strong>Carrera:</strong> @ViewBag.UserCarrera</p>
            </div>

            <div class="alert alert-info mt-4">
                <i class="fas fa-info-circle"></i>
                <strong>Iniciaste sesión como ESTUDIANTE</strong>
                <p class="mb-0 mt-2">Esta es tu página de inicio. Desde aquí podrás gestionar tus préstamos, buscar libros y más.</p>
            </div>

            <div class="mt-4">
                <h5 class="mb-3">Accesos Rápidos:</h5>
                <div class="d-flex flex-wrap gap-2 justify-content-center">
                    <a href="@Url.Action("Catalogo", "Libros")" class="btn btn-custom">
                        <i class="fas fa-book"></i> Catálogo
                    </a>
                    <a href="@Url.Action("MisPrestamos", "Prestamos")" class="btn btn-custom">
                        <i class="fas fa-bookmark"></i> Mis Préstamos
                    </a>
                    <a href="@Url.Action("MisReservas", "Reservas")" class="btn btn-custom">
                        <i class="fas fa-clock"></i> Reservas
                    </a>
                    <a href="@Url.Action("HistorialCreditos", "Prestamos")" class="btn btn-custom">
                        <i class="fas fa-coins"></i> Créditos
                    </a>
                    <a href="@Url.Action("ChatBotVirtual", "ChatBot")" class="btn btn-custom">
                        <i class="fas fa-robot"></i> Asistente
                    </a>
                </div>
            </div>
        </div>
    </div>