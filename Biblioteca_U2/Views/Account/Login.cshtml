@model Biblioteca_U2.Models.LoginViewModel
@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BookCicle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow: hidden;
        }

        .login-container {
            background: white;
            border-radius: 25px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 1200px;
            width: 100%;
            min-height: 600px;
            margin: 20px;
            display: flex;
            position: relative;
            z-index: 1;
        }

        .login-left {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 80px 50px;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .login-right {
            flex: 1.2;
            padding: 80px 70px;
        }

        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 14px;
            font-weight: 600;
            transition: transform 0.2s;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            }

        /* 🤖 Robot Asistente */
        #robot-container {
            position: fixed;
            bottom: 40px;
            right: 40px;
            text-align: center;
            z-index: 9999;
            animation: fadeIn 1s ease;
        }

        #robot-bubble {
            background: white;
            border: 2px solid #7f7fff;
            color: #333;
            padding: 14px 18px;
            border-radius: 18px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            font-size: 16px;
            max-width: 280px;
            margin-bottom: 12px;
            position: relative;
        }

            #robot-bubble::after {
                content: '';
                position: absolute;
                bottom: -12px;
                right: 40px;
                border-width: 8px;
                border-style: solid;
                border-color: #7f7fff transparent transparent transparent;
            }

        #robot {
            width: 160px;
            position: relative;
            animation: float 3s ease-in-out infinite;
        }

        .hand {
            position: absolute;
            width: 40px;
            height: 40px;
            background: url('https://cdn-icons-png.flaticon.com/512/4712/4712109.png') no-repeat center;
            background-size: contain;
            top: 20px;
            right: -30px;
            transform-origin: left center;
            animation: wave 2s ease-in-out infinite;
        }

        /* ✅ Animaciones CSS (usa @@ para que Razor no las interprete) */
        @@keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0px);
            }
        }

        @@keyframes wave {
            0%, 100% {
                transform: rotate(0deg);
            }

            50% {
                transform: rotate(25deg);
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <i class="fas fa-book-reader" style="font-size:100px; margin-bottom:20px;"></i>
            <h2>BookCicle</h2>
            <p>Universidad</p>
            <p class="mt-3">Accede a miles de libros compartidos por estudiantes como tú.</p>
        </div>

        <div class="login-right">
            <h3 class="mb-4 text-center">Iniciar Sesión</h3>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Correo Electrónico</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "ejemplo@virtual.upt.pe" })
                </div>
                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control", placeholder = "••••••••" })
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-primary btn-login">
                        <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- 🤖 Robot Asistente -->
    <div id="robot-container">
        <div id="robot-bubble">👋 ¡Hola! Bienvenido al mundo de los libros.<br>Ingresa tu usuario y contraseña.</div>
        <img id="robot" src="~/Content/img/artificial.gif" alt="Robot Asistente">
        <div class="hand"></div>
    </div>

    <!-- 🔊 Voz personalizada del asistente -->
    <audio id="vozLucia" src="~/Content/audio/voz.wav" preload="auto"></audio>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const audio = document.getElementById("vozLucia");

            // Intentar reproducir automáticamente
            const reproducir = () => {
                audio.play()
                    .then(() => console.log("🔊 Voz de Lucía reproducida correctamente"))
                    .catch(() => {
                        console.warn("⚠️ El navegador bloqueó la reproducción automática. Se activará al hacer clic.");
                        document.addEventListener("click", () => {
                            if (audio.paused) audio.play();
                        }, { once: true });
                    });
            };

            reproducir();

            // Ocultar burbuja luego de 9 segundos
            setTimeout(() => {
                document.getElementById("robot-bubble").style.display = "none";
            }, 9000);
        });
    </script>
</body>
</html>
