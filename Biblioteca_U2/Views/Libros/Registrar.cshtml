@model Biblioteca_U2.Models.tblibro
@{
    ViewBag.Title = "Registrar Donación de Libro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main -->
<main class="px-4">
        <div class="max-w-4xl mx-auto">
            <!-- Breadcrumb -->
            <nav class="mb-6 text-white flex items-center space-x-2">
                <a href="@Url.Action("Dashboard","Admin")" class="hover:text-pink-200 flex items-center">
                    <i class="fas fa-home mr-1"></i> Dashboard
                </a>
                <i class="fas fa-chevron-right text-pink-200"></i>
                <span class="text-pink-200">Registrar Donación</span>
            </nav>

            <!-- Card -->
            <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
                <div class="bg-gradient-to-r from-pink-500 to-pink-600 p-8 text-white flex items-center">
                    <div class="bg-white bg-opacity-20 p-4 rounded-full mr-6">
                        <i class="fas fa-gift text-3xl"></i>
                    </div>
                    <div>
                        <h2 class="text-3xl font-bold mb-2">Registrar Donación de Libro</h2>
                        <p class="text-pink-100">Complete la información del libro donado para agregarlo al catálogo</p>
                    </div>
                </div>

                <div class="p-8">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="bg-green-100 text-green-800 border-l-4 border-green-500 p-4 mb-5 rounded-md flex items-center">
                            <i class="fas fa-check-circle mr-2"></i> @TempData["SuccessMessage"]
                        </div>
                    }

                    <!-- 🤖 Sección de análisis con IA -->
                    <div class="mb-8 bg-gradient-to-r from-purple-50 to-pink-50 p-6 rounded-xl border-2 border-purple-200">
                        <h3 class="text-lg font-bold text-purple-800 mb-4 flex items-center">
                            <i class="fas fa-magic mr-2"></i>
                            Autocompletar con IA - Escanea la Portada
                        </h3>
                        <div class="flex flex-col md:flex-row gap-4 items-center">
                            <div class="flex-1">
                                <input type="file" id="portada" accept="image/*" 
                                       class="w-full px-4 py-3 border-2 border-purple-300 rounded-lg focus:ring-2 focus:ring-purple-500 bg-white" />
                                <p class="text-xs text-gray-600 mt-2">
                                    <i class="fas fa-info-circle"></i> Sube una imagen de la portada del libro
                                </p>
                            </div>
                            <button type="button" onclick="scanPortada()" 
                                    class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white px-6 py-3 rounded-lg font-semibold flex items-center gap-2 transition duration-300 shadow-lg">
                                <i class="fas fa-magic mr-2"></i> Autocompletar
                            </button>
                        </div>
                        <!-- Indicador de carga -->
                        <div id="loadingIA" style="display:none;" class="mt-4 text-center">
                            <i class="fas fa-spinner fa-spin text-3xl text-purple-600"></i>
                            <p class="text-purple-700 font-semibold mt-2">Analizando portada...</p>
                        </div>
                    </div>

                    @using (Html.BeginForm("Registrar", "Libros", FormMethod.Post, new { @class = "space-y-6" }))
                    {
                        @Html.AntiForgeryToken()

                        <!-- Fila 1 -->
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-book mr-2 text-pink-600"></i>Nombre del Libro *
                                </label>
                                @Html.TextBoxFor(m => m.titulo, new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500", @id = "titulo", placeholder = "Ingrese el título completo del libro" })
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-user-pen mr-2 text-pink-600"></i>Autor *
                                </label>
                                @Html.TextBoxFor(m => m.autor, new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500", @id = "autor", placeholder = "Nombre del autor o autores" })
                            </div>
                        </div>

                        <!-- Fila 2 -->
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-tags mr-2 text-pink-600"></i>Género *
                                </label>
                                @Html.DropDownListFor(m => m.id_genero, (SelectList)ViewBag.Generos, "Seleccione un género",
                                    new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500", @id = "genero" })
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-graduation-cap mr-2 text-pink-600"></i>Carrera Relacionada
                                </label>
                                @Html.DropDownListFor(m => m.id_carrera, (SelectList)ViewBag.Carreras, "Seleccione una carrera (opcional)",
                                    new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500", @id = "carrera" })
                            </div>
                        </div>

                        <!-- Fila 3 -->
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-calendar mr-2 text-pink-600"></i>Año de Publicación
                                </label>
                                @Html.TextBoxFor(m => m.ano_publicacion, new { @type = "number", @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500", @id = "ano", placeholder = "Ejemplo: 2024" })
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-star mr-2 text-pink-600"></i>Estado Inicial *
                                </label>
                                @Html.DropDownListFor(m => m.condicion,
                                    new SelectList(new[] { "Regular", "Bueno", "Muy bueno", "Excelente" }),
                                    "Seleccione el estado",
                                    new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500" })
                            </div>
                        </div>

                        <!-- Descripción -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-align-left mr-2 text-pink-600"></i>Descripción
                            </label>
                            @Html.TextAreaFor(m => m.sinopsis, new { @rows = "3", @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500", @id = "descripcion", placeholder = "Breve descripción del contenido del libro..." })
                        </div>

                        <!-- Donador -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-heart mr-2 text-pink-600"></i>Donador *
                            </label>
                            @Html.DropDownListFor(m => m.id_usuario_donador, (SelectList)ViewBag.Usuarios, "Seleccione un donador",
                                new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500" })
                        </div>

                        <!-- Botones -->
                        <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                            <a href="@Url.Action("Dashboard", "Admin")"
                               class="flex-1 bg-gray-500 hover:bg-gray-600 text-white py-3 px-6 rounded-lg font-semibold text-lg flex items-center justify-center transition duration-300">
                                <i class="fas fa-times mr-2"></i>Cancelar
                            </a>
                            <button type="submit"
                                    class="flex-1 bg-gradient-to-r from-pink-500 to-pink-600 text-white py-3 px-6 rounded-lg font-semibold text-lg hover:from-pink-600 hover:to-pink-700 focus:ring-4 focus:ring-pink-300 transition duration-300 transform hover:scale-105 shadow-lg flex items-center justify-center">
                                <i class="fas fa-plus-circle mr-2"></i>Registrar Libro
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>

    <!-- 🤖 Script para análisis con IA -->
    <script>
        function scanPortada() {
            const fileInput = document.getElementById('portada');
            const file = fileInput.files[0];

            if (!file) {
                alert('Por favor selecciona una imagen primero');
                return;
            }

            // Mostrar indicador de carga
            document.getElementById('loadingIA').style.display = 'block';

            // Crear FormData
            const formData = new FormData();
            formData.append('img', file);

            // Enviar a la API
            fetch('@Url.Action("AnalizarPortada", "Libros")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                // Ocultar indicador de carga
                document.getElementById('loadingIA').style.display = 'none';

                if (data.exito) {
                    // Autocompletar campos
                    document.getElementById('titulo').value = data.titulo || '';
                    document.getElementById('autor').value = data.autor || '';
                    document.getElementById('descripcion').value = data.descripcion || '';
                    
                    if (data.ano > 0) {
                        document.getElementById('ano').value = data.ano;
                    }
                    
                    if (data.id_genero > 0) {
                        document.getElementById('genero').value = data.id_genero;
                    }
                    
                    if (data.id_carrera > 0) {
                        document.getElementById('carrera').value = data.id_carrera;
                    }

                    alert('✅ ¡Campos autocompletados con éxito!');
                } else {
                    alert('❌ Error: ' + data.mensaje);
                }
            })
            .catch(error => {
                document.getElementById('loadingIA').style.display = 'none';
                alert('❌ Error al conectar con el servidor: ' + error);
            });
        }
    </script>
