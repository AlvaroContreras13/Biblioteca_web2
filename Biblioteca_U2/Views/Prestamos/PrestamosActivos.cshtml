@model List<Biblioteca_U2.Models.tbprestamo>
@{
    ViewBag.Title = "Pr√©stamos Activos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        min-height: 100vh;
    }
</style>

<!-- üìö Contenido principal -->
<main class="max-w-7xl mx-auto px-4 py-8">

        <!-- Mensajes -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-lg">
                <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-lg">
                <i class="fas fa-exclamation-circle mr-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        <!-- Estad√≠sticas -->
        @{
            // CAMBIADO: "activo" ‚Üí "Prestado"
            var totalActivos = Model != null ? Model.Count(p => p.estado == "Prestado") : 0;
            var totalRetrasados = Model != null ? Model.Count(p => p.estado == "retrasado") : 0;
        }
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm font-semibold">Total Pr√©stamos</p>
                        <p class="text-3xl font-bold text-purple-600">@(Model?.Count ?? 0)</p>
                    </div>
                    <div class="bg-purple-100 rounded-full p-4">
                        <i class="fas fa-book-reader text-3xl text-purple-600"></i>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm font-semibold">Prestados</p> <!-- Cambiado de "Activos" a "Prestados" -->
                        <p class="text-3xl font-bold text-green-600">@totalActivos</p>
                    </div>
                    <div class="bg-green-100 rounded-full p-4">
                        <i class="fas fa-check-circle text-3xl text-green-600"></i>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm font-semibold">Retrasados</p>
                        <p class="text-3xl font-bold text-red-600">@totalRetrasados</p>
                    </div>
                    <div class="bg-red-100 rounded-full p-4">
                        <i class="fas fa-exclamation-triangle text-3xl text-red-600"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="mb-8">
            <h2 class="text-3xl font-bold text-gray-800 mb-2">
                <i class="fas fa-book-reader text-purple-600 mr-2"></i>Pr√©stamos Activos
            </h2>
            <p class="text-gray-600">Gestiona los pr√©stamos en curso y sus devoluciones</p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gradient-to-r from-purple-600 to-purple-700">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Libro</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Prestatario</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Fechas</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Estado</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-white uppercase tracking-wider">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var prestamo in Model)
                        {
                            var diasRestantes = (prestamo.fecha_prevista_devolucion - DateTime.Now).TotalDays;
                            var esRetrasado = prestamo.estado == "retrasado";
                            var esPorVencer = diasRestantes <= 3 && diasRestantes > 0 && prestamo.estado == "Prestado"; // Agregada validaci√≥n de estado

                            <tr class="hover:bg-gray-50 transition @(esRetrasado ? "bg-red-50" : esPorVencer ? "bg-yellow-50" : "")">
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-12 w-12 bg-gradient-to-br from-purple-100 to-purple-200 rounded-lg flex items-center justify-center">
                                            <i class="fas fa-book text-purple-600 text-xl"></i>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">@prestamo.tblibro.titulo</div>
                                            <div class="text-sm text-gray-500">@prestamo.tblibro.autor</div>
                                            <div class="text-xs text-gray-400">@prestamo.tblibro.codigo_referencia</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm font-medium text-gray-900">
                                        @prestamo.tbusuario2.nombre @prestamo.tbusuario2.apellido
                                    </div>
                                    <div class="text-sm text-gray-500">@prestamo.tbusuario2.email</div>
                                    <div class="text-xs text-gray-400">@prestamo.tbusuario2.codigo_identificacion</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        <i class="fas fa-calendar-check mr-1"></i>
                                        Entrega: @(prestamo.fecha_entrega.HasValue
                                        ? prestamo.fecha_entrega.Value.ToString("dd/MM/yyyy")
                                        : "Sin registro")
                                    </div>
                                    <div class="text-sm text-gray-900">
                                        <i class="fas fa-calendar-times mr-1 text-red-500"></i>
                                        Devoluci√≥n: @prestamo.fecha_prevista_devolucion.ToString("dd/MM/yyyy")
                                    </div>
                                    @if (prestamo.numero_renovaciones > 0)
                                    {
                                        <div class="text-xs text-blue-600 mt-1">
                                            <i class="fas fa-redo mr-1"></i>Renovaciones: @prestamo.numero_renovaciones/2
                                        </div>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (esRetrasado)
                                    {
                                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                            <i class="fas fa-exclamation-triangle mr-1"></i>Retrasado (@Math.Abs((int)diasRestantes) d√≠as)
                                        </span>
                                    }
                                    else if (esPorVencer)
                                    {
                                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                            <i class="fas fa-clock mr-1"></i>Por vencer (@((int)diasRestantes) d√≠as)
                                        </span>
                                    }
                                    else if (prestamo.estado == "Prestado") // CAMBIADO: Validar estado "Prestado"
                                    {
                                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                            <i class="fas fa-check-circle mr-1"></i>Prestado (@((int)diasRestantes) d√≠as) <!-- Cambiado de "Activo" a "Prestado" -->
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    <div class="flex flex-col space-y-2">
                                        <a href="@Url.Action("RegistrarDevolucion", new { idPrestamo = prestamo.id_prestamo })" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-semibold transition inline-block">
                                            <i class="fas fa-undo mr-1"></i>Registrar Devoluci√≥n
                                        </a>
                                        @if (prestamo.numero_renovaciones < 2 && prestamo.estado != "retrasado")
                                        {
                                            using (Html.BeginForm("RenovarPrestamo", "Prestamos", FormMethod.Post, new { @class = "inline" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="idPrestamo" value="@prestamo.id_prestamo" />
                                                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-semibold transition w-full"
                                                        onclick="return confirm('¬øRenovar este pr√©stamo por 14 d√≠as m√°s?')">
                                                    <i class="fas fa-redo mr-1"></i>Renovar
                                                </button>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="bg-white rounded-lg shadow-lg p-12 text-center">
                <i class="fas fa-check-circle text-6xl text-green-300 mb-4"></i>
                <h3 class="text-xl font-bold text-gray-600 mb-2">No hay pr√©stamos activos</h3>
                <p class="text-gray-500">Todos los libros han sido devueltos</p>
            </div>
        }

    </main>