@model IEnumerable<Biblioteca_U2.Models.tbreserva>

@{
    ViewBag.Title = "Mis Reservas de Libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

        .content-container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 0 20px;
        }

        .card-custom {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 30px;
        }

        .card-header-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 25px;
            border-radius: 15px 15px 0 0;
        }

        .reservation-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            border: 2px solid #e9ecef;
            transition: all 0.3s;
        }

        .reservation-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            border-color: #667eea;
        }

        .reservation-card.notificada {
            border-color: #28a745;
            background: #f1f9f4;
        }

        .position-badge {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            font-size: 24px;
            font-weight: 700;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .book-title {
            font-size: 20px;
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }

        .book-author {
            color: #6c757d;
            font-size: 15px;
        }

        .reservation-info {
            display: flex;
            gap: 20px;
            margin-top: 15px;
            flex-wrap: wrap;
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #495057;
        }

        .info-item i {
            color: #667eea;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: #6c757d;
        }

        .empty-state i {
            font-size: 100px;
            margin-bottom: 20px;
            color: #dee2e6;
        }

        .btn-custom {
            padding: 8px 20px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
            border: none;
        }

        .btn-confirm {
            background: #28a745;
            color: white;
        }

        .btn-confirm:hover {
            background: #218838;
            transform: translateY(-2px);
        }

        .btn-cancel {
            background: #dc3545;
            color: white;
        }

        .btn-cancel:hover {
            background: #c82333;
            transform: translateY(-2px);
        }

        .back-btn {
            background: white;
            border: 2px solid #e9ecef;
            color: #667eea;
            padding: 10px 25px;
            border-radius: 10px;
            text-decoration: none;
            transition: all 0.3s;
            font-weight: 600;
        }

        .back-btn:hover {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }

        .alert-notification {
            background: #d1ecf1;
            border-left: 4px solid #17a2b8;
            padding: 15px;
            border-radius: 5px;
            margin-top: 15px;
        }

        .countdown {
            font-weight: 700;
            color: #dc3545;
        }
</style>

<div class="content-container" style="margin-top: 20px;">
        <!-- Mensajes -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Contenido -->
        <div class="card-custom">
            <div class="card-header-custom">
                <h3 class="mb-0">
                    <i class="fas fa-bookmark"></i> Mis Reservas de Libros
                </h3>
                <p class="mb-0 mt-2" style="opacity: 0.9;">
                    Gestiona tus reservas de libros no disponibles
                </p>
            </div>
            <div class="p-4">
                @if (Model != null && Model.Any())
                {
                    foreach (var reserva in Model)
                    {
                        var esNotificada = reserva.estado == "notificada";
                        var diasEspera = (DateTime.Now - (reserva.fecha_reserva ?? DateTime.Now)).Days;

                        <div class="reservation-card @(esNotificada ? "notificada" : "")">
                            <div class="row align-items-center">
                                <div class="col-md-1 text-center">
                                    @if (esNotificada)
                                    {
                                        <div style="font-size: 48px; color: #28a745;">
                                            <i class="fas fa-bell"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="position-badge">
                                            #@reserva.posicion_cola
                                        </div>
                                    }
                                </div>
                                <div class="col-md-7">
                                    <div class="book-title">@reserva.tblibro.titulo</div>
                                    <div class="book-author">
                                        <i class="fas fa-user"></i> @reserva.tblibro.autor
                                    </div>
                                    <div class="reservation-info">
                                        <div class="info-item">
                                            <i class="fas fa-tag"></i>
                                            <span>@reserva.tblibro.tbgenero.nombre_genero</span>
                                        </div>
                                        <div class="info-item">
                                            <i class="fas fa-calendar"></i>
                                            <span>Reservado: @(reserva.fecha_reserva?.ToString("dd/MM/yyyy") ?? "N/A")</span>
                                        </div>
                                        <div class="info-item">
                                            <i class="fas fa-clock"></i>
                                            <span>@diasEspera día(s) esperando</span>
                                        </div>
                                    </div>

                                    @if (esNotificada)
                                    {
                                        var tiempoRestante = (reserva.fecha_expiracion_confirmacion.Value - DateTime.Now).Hours;
                                        <div class="alert-notification">
                                            <strong><i class="fas fa-check-circle"></i> ¡Libro Disponible!</strong>
                                            <p class="mb-0 mt-1">
                                                Este libro está disponible. Tienes <span class="countdown">@tiempoRestante horas</span> 
                                                para confirmar tu interés, o será asignado al siguiente en la cola.
                                            </p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div style="margin-top: 10px; padding: 10px; background: #e7f3ff; border-radius: 5px;">
                                            <small>
                                                <i class="fas fa-info-circle"></i>
                                                <strong>Posición en cola:</strong> Hay @(reserva.posicion_cola - 1) persona(s) delante de ti.
                                                Te notificaremos cuando el libro esté disponible.
                                            </small>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4 text-end">
                                    @if (esNotificada)
                                    {
                                        using (Html.BeginForm("ConfirmarInteresReserva", "Reservas", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="idReserva" value="@reserva.id_reserva" />
                                            <button type="submit" class="btn btn-custom btn-confirm mb-2" 
                                                    onclick="return confirm('¿Confirmar interés en este libro?')">
                                                <i class="fas fa-check"></i> Confirmar Interés
                                            </button>
                                        }
                                    }

                                    using (Html.BeginForm("CancelarReserva", "Reservas", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="idReserva" value="@reserva.id_reserva" />
                                        <button type="submit" class="btn btn-custom btn-cancel" 
                                                onclick="return confirm('¿Seguro que deseas cancelar esta reserva?')">
                                            <i class="fas fa-times"></i> Cancelar Reserva
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-bookmark"></i>
                        <h4>No tienes reservas activas</h4>
                        <p>Puedes reservar libros que actualmente no estén disponibles.</p>
                        <p>Te notificaremos cuando estén listos para ti.</p>
                        <a href="@Url.Action("Catalogo", "Libros")" class="btn btn-primary mt-3">
                            <i class="fas fa-search"></i> Buscar Libros
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
